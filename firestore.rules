rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    // Safe: return partner's uid or null if user doc missing or no partner
    function getPartnerId(uid) {
      let u = get(/databases/$(database)/documents/users/$(uid));
      return u != null && u.data != null && 'partnerId' in u.data
        ? u.data.partnerId
        : null;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow read: if isSignedIn() && getPartnerId(request.auth.uid) == userId;
    }

    match /completions/{completionId} {
      allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        getPartnerId(request.auth.uid) == resource.data.userId
      );
    }

    match /invites/{inviteId} {
      allow create: if isSignedIn() && request.resource.data.fromUserId == request.auth.uid;
      allow read: if isSignedIn() && (
        resource.data.toUserEmail == request.auth.token.email ||
        resource.data.fromUserId == request.auth.uid
      );
      allow update: if isSignedIn() && resource.data.toUserEmail == request.auth.token.email;
    }
  }
}
